{
  "manifest_version": 3,
  "name": "MediaLens",
  "version": "1.0",
  "description": "Rýchla klasifikácia titulkov pomocou lokálneho MediaLens API.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["contextMenus", "notifications"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  }
}
